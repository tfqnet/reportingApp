{
  "name": "safetyreport",
  "version": "1.0.0",
  "private": true,
  "description": "Multi-tenant SafetyReport - Comprehensive safety reporting system for Unsafe Acts and Unsafe Conditions",
  "workspaces": [
    "backend",
    "web",
    "mobile",
    "shared"
  ],
  "scripts": {
    "backend": "npm run dev --workspace=backend",
    "web": "npm run dev --workspace=web",
    "mobile": "npm start --workspace=mobile",
    "install:all": "npm install && npm install --workspaces",
    "build:all": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:migrate": "npm run migrate --workspace=backend",
    "db:seed": "npm run seed --workspace=backend"
  },
  "devDependencies": {
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
