# Production Environment Configuration
# Copy this to .env.production and fill in actual values

# Database connection (PostgreSQL recommended for production)
# Railway/Render will provide this automatically
DATABASE_URL="postgresql://username:password@host:5432/database?schema=public"

# JWT Configuration - MUST BE STRONG IN PRODUCTION
# Generate with: openssl rand -base64 32
JWT_SECRET="REPLACE-WITH-STRONG-SECRET-FROM-OPENSSL-RAND"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3000
NODE_ENV=production

# CORS Configuration
# Add your production frontend URLs (comma-separated)
CORS_ORIGIN="https://your-app.vercel.app,https://your-domain.com"

# AWS S3 Configuration for media uploads
AWS_ACCESS_KEY_ID="your_production_access_key"
AWS_SECRET_ACCESS_KEY="your_production_secret_key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="safetyreport-production-media"

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/jpg,video/mp4"

# Optional: Logging & Monitoring
# SENTRY_DSN="https://your-sentry-dsn"
# LOG_LEVEL="info"
