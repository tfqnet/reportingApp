# Database connection
DATABASE_URL="postgresql://safetyreport_user:safetyreport_password@localhost:5432/safetyreport_db?schema=public"

# JWT Configuration
JWT_SECRET="your_super_secret_jwt_key_change_in_production"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN="http://localhost:5173"

# AWS S3 Configuration (or compatible service like Cloudflare R2)
AWS_ACCESS_KEY_ID="your_access_key_id"
AWS_SECRET_ACCESS_KEY="your_secret_access_key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="safetyreport-media"

# Optional: File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/jpg,video/mp4"
